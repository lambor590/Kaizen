{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Kaizen",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "width": 300,
        "height": 300,
        "decorations": false,
        "url": "splash.html",
        "center": true,
        "label": "splash",
        "transparent": true,
        "skipTaskbar": true,
        "resizable": false,
        "alwaysOnTop": true
      },
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Kaizen",
        "width": 1270,
        "height": 600,
        "minWidth": 660,
        "minHeight": 300,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "publisher": "The Ghost",
      "category": "Utility",
      "copyright": "Copyright Â© 2024 The Ghost",
      "shortDescription": "Kaizen",
      "longDescription": "Herramientas para ahorrar tiempo y mantener tu equipo en buen estado.",
      "identifier": "ghost.kaizen.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "wix": {
          "language": "es-ES"
        },
        "nsis": {
          "languages": [
            "English",
            "Spanish"
          ],
          "installerIcon": "icons/icon.ico"
        }
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/lambor590/Kaizen/releases/latest/download/latest.json"
      ],
      "dialog": false,
