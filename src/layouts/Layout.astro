        </div>
      </div>
    </div>
  </body>
</html>
<style is:global>
  :root {
    font-family: system-ui;
    user-select: none;
  }

  :root:has(
      :is(
          .modal-open,
          .modal:target,
          .modal-toggle:checked + .modal,
          .modal[open]
        )
    ) {
    scrollbar-gutter: unset;
  }

  html:has(.drawer-toggle:checked) {
    scrollbar-gutter: unset;
  }

  html {
    overflow-x: hidden;
    margin-right: calc(-1 * (100vw - 100%));
  }

  body {
    margin: 0;
    min-width: 320px;
    min-height: 100vh;
    padding: 0;
  }

  .prose {
    max-width: none;
  }

  .video-thumbnail::after {
    content: "";
    width: 100%;
    height: 100%;
    position: absolute;
    background: inherit;
    filter: blur(20px) saturate(200%);
    z-index: -1;
  }

  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation: none;
    mix-blend-mode: normal;
    background-color: hsl(var(--b1));
  }

  main {
    view-transition-name: main;
    transform-origin: center;
  }

  @keyframes magic-exit {
    0% {
      opacity: 1;
      transform: scale(1);
      filter: brightness(1);
    }
    100% {
      opacity: 0;
      transform: scale(0.95) translateY(30px);
      filter: brightness(1.2) blur(10px);
    }
  }

  @keyframes magic-enter {
    0% {
      opacity: 0;
      transform: scale(1.05) translateY(-30px);
      filter: brightness(1.2) blur(10px);
    }
    100% {
      opacity: 1;
      transform: scale(1);
      filter: brightness(1) blur(0);
    }
  }

  ::view-transition-old(main) {
    animation: 400ms cubic-bezier(0.4, 0, 0.2, 1) both magic-exit;
  }

  ::view-transition-new(main) {
    animation: 400ms cubic-bezier(0.4, 0, 0.2, 1) both magic-enter;
  }
</style>

<script>
